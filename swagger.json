{
  "openapi": "3.0.1",
  "info": {
    "version": "1.0.0",
    "title": "Power-Pulse_Api",
    "description": "Power-Pulse_API swagger documentation",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "consumes": ["application/json", "multipart/form-data"],
  "produces": ["application/json", "multipart/form-data"],
  "servers": [{ "url": "https://powerpulse-171j.onrender.com/api" }],
  "tags": [
    {
      "name": "Auth",
      "description": "Authorization endpoints"
    },
    {
      "name": "Dairy",
      "description": "Dairy endpoints"
    },
    {
      "name": "Exercises",
      "description": "Exercises endpoints"
    },
    {
      "name": "Products",
      "description": "Products endpoints"
    }
  ],
  "paths": {
    "/auth/signup": {
      "post": {
        "tags": ["Auth"],
        "summary": "User registration",
        "parameters": [],
        "security": [{ "Bearer": [] }],
        "requestBody": {
          "description": "User registration object",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RegistrationRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/RegistrationResponse"
                }
              }
            }
          },
          "409": {
            "description": "Email already in use"
          }
        }
      }
    },
    "/auth/signin": {
      "post": {
        "tags": ["Auth"],
        "summary": "Logs user into the system",
        "parameters": [],
        "security": [{ "Bearer": [] }],
        "requestBody": {
          "description": "User login object",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/LoginResponse"
                }
              }
            }
          },
          "401": {
            "description": "Email or password invalid"
          }
        }
      }
    },
    "/auth/current": {
      "get": {
        "tags": ["Auth"],
        "summary": "Get current user",
        "parameters": [],
        "security": [{ "Bearer": [] }],

        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CurrentUserResponse"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    },
    "/auth/logout": {
      "post": {
        "tags": ["Auth"],
        "summary": "User logout",
        "parameters": [],
        "security": [{ "Bearer": [] }],

        "responses": {
          "204": {
            "description": "Successful operation"
          },
          "401": {
            "description": "User unauthorized"
          }
        }
      }
    },
    "/auth/avatar": {
      "patch": {
        "tags": ["Auth"],
        "summary": "Updates user`s avatar",
        "parameters": [],
        "security": [{ "Bearer": [] }],
        "requestBody": {
          "content": {
            "image/png": {
              "schema": {
                "type": "string",
                "format": "binary"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AvatarResponse"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    },
    "/auth/info": {
      "patch": {
        "tags": ["Auth"],
        "summary": "Updates user`s information",
        "parameters": [],
        "security": [{ "Bearer": [] }],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UserInfo"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UserInfo"
                }
              }
            }
          },
          "401": {
            "description": "User unauthorized"
          }
        }
      }
    },
    "/products": {
      "get": {
        "tags": ["Products"],
        "summary": "Get list of products",
        "parameters": [],
        "security": [{ "Bearer": [] }],
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Product"
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "404": {
            "description": "Not found"
          }
        }
      }
    },
    "/products/categories": {
      "get": {
        "tags": ["Products"],
        "summary": "Get list of products categories",
        "parameters": [],
        "security": [{ "Bearer": [] }],
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProductsCategories"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "404": {
            "description": "Not found"
          }
        }
      }
    },
    "/dairy/getInfo": {
      "post": {
        "tags": ["Dairy"],
        "summary": "Get day info in dairy for user",
        "parameters": [],
        "security": [{ "Bearer": [] }],
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                    "$ref": "#/components/schemas/Day"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    },
    "/dairy/addExercise": {
      "patch": {
        "tags": ["Dairy"],
        "summary": "Add exercise in dairy for user",
        "parameters": [],
        "security": [{ "Bearer": [] }],
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/"
                  }
                }
              }
            }
          },
          "401": {
            "description": "User unauthorized"
          }
        }
      }
    },
    "/exercises": {
      "get": {
        "tags": ["Exercises"],
        "summary": "Get list of exercises",
        "parameters": [],
        "security": [{ "Bearer": [] }],
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Exercise"
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    },
    "/exercises/details": {
      "get": {
        "tags": ["Exercises"],
        "summary": "Get list of body parts, equipments and muscles",
        "parameters": [],
        "security": [{ "Bearer": [] }],
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ExercisesDetails"
                }
              }
            }
          },
          "401": {
            "description": "User unauthorized"
          }
        }
      }
    },
    "/exercises/filters": {
      "get": {
        "tags": ["Exercises"],
        "summary": "Get list of filter for exercise",
        "parameters": [
          {
            "in":"query",
            "name": "type",
            "required":true
        }],
        "security": [{ "Bearer": [] }],
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/ExerciseFilter"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request"
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "RegistrationRequest": {
        "type": "object",
        "required": ["email", "password"],
        "properties": {
          "name": {
            "type": "string",
            "example": "Username"
          },
          "email": {
            "type": "string",
            "format": "email",
            "example": "exampleEmail@mail.com"
          },
          "password": {
            "type": "string",
            "example": "userPassword"
          }
        }
      },
      "RegistrationResponse": {
        "type": "object",
        "properties": {
          "user": {
            "type": "object",
            "properties": {
              "email": {
                "type": "string",
                "format": "email"
              },
              "name": {
                "type": "string",
                "example": "Username"
              },
              "avatarURL": {
                "type": "string",
                "example": "//www.gravatar.com/avatar/6bf1c3e37665abb9a1e0e3f81796c87c?s=2503"
              }
            }
          },

          "token": {
            "type": "string",
            "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJzdWIiOiIxMjM0NTY3ODkwIiwibmFtZSI6IkpvaG4gRG9lIiwiaWF0IjoxNTE2MjM5MDIyfQ.SflKxwRJSMeKKF2QT4fwpMeJf36POk6yJV_adQssw5c"
          }
        }
      },
      "LoginRequest": {
        "type": "object",
        "required": ["email", "password"],
        "properties": {
          "email": {
            "type": "string",
            "format": "email",
            "example": "exampleEmail@mail.com"
          },
          "password": {
            "type": "string",
            "example": "userPassword"
          }
        }
      },
      "LoginResponse": {
        "type": "object",
        "properties": {
          "user": {
            "type": "object",
            "properties": {
              "email": {
                "type": "string",
                "format": "email"
              },
              "name": {
                "type": "string",
                "example": "Username"
              }
            }
          },
          "token": {
            "type": "string",
            "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJzdWIiOiIxMjM0NTY3ODkwIiwibmFtZSI6IkpvaG4gRG9lIiwiaWF0IjoxNTE2MjM5MDIyfQ.SflKxwRJSMeKKF2QT4fwpMeJf36POk6yJV_adQssw5c"
          }
        }
      },
      "AvatarResponse": {
        "type": "object",
        "properties": {
          "avatarURL": {
            "type": "string",
            "example": "//www.gravatar.com/avatar/6bf1c3e37665abb9a1e0e3f81796c87c?s=2503"
          }
        }
      },
      "CurrentUserResponse": {
        "type": "object",
        "properties": {
          "name": { "type": "string", "example": "Username" },
          "email": {
            "type": "string",
            "example": "exampleEmail@mail.com"
          }
        }
      },
      "UserInfo": {
        "type": "object",
        "required": ["email", "password"],
        "properties": {
          "name": { "type": "string", "example": "Changed Username" },
          "email": {
            "type": "string",
            "example": "exampleEmail@mail.com"
          }
        }
      },
      "Product": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string",
            "example": "655144fb56a08fda8eb06785"
          },
          "weight": {
            "type": "number",
            "example": "upper legs"
          },
          "calories": {
            "type": "number",
            "example": "assisted"
          },
          "category": {
            "type": "string",
            "example": "fish"
          },
          "title": {
            "type": "string",
            "example": "marlin"
          },
          "groupBloodNotAllowed": {
            "type": "object",
            "properties": {
              "1": {
                "type": "boolean",
                "example": false
              },
              "2": {
                "type": "boolean",
                "example": false
              },
              "3": {
                "type": "boolean",
                "example": true
              },
              "4": {
                "type": "boolean",
                "example": true
              }
            }
          }
        }
      },
      "ProductsCategories": {
        "type": "array",
        "items": {
          "type": "string",
          "example": "'cereals', 'dairy', 'dried fruits'"
        }
      },
      "Exercise": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string",
            "example": "655144fb56a08fda8eb06785"
          },
          "bodyPart": {
            "type": "string",
            "example": "upper legs"
          },
          "equipment": {
            "type": "string",
            "example": "assisted"
          },
          "gifUrl": {
            "type": "string",
            "example": "https://ftp.goit.study/img/power-pulse/gifs/0016.gif"
          },
          "name": {
            "type": "string",
            "example": "assisted prone hamstring"
          },
          "target": {
            "type": "string",
            "example": "hamstrings"
          },
          "burnedCalories": {
            "type": "number",
            "example": 341
          },
          "time": {
            "type": "number",
            "example": 3
          }
        }
      },
      "ExercisesDetails": {
        "type": "object",
        "properties": {
          "bodyParts": {
            "type": "array",
            "items": {
              "type": "string",
              "example": "'chest', 'upper arms', 'waist'"
            }
          },
          "targets": {
            "type": "array",
            "items": {
              "type": "string",
              "example": "'pectorals', 'triceps', 'biceps'"
            }
          },
          "equipments": {
            "type": "array",
            "items": {
              "type": "string",
              "example": "'dumbbell', 'kettlebell', 'ez barbell'"
            }
          }
        }
      },
      "Day": {
        "type": "object",
        "properties": {
          "data": {
            "type": "string",
            "example": "23.09.2023"
          },
          "doneExercises": {
            "type": "array",
            "items": {
              "$ref":"#/components/schemas/Exercise"
            }
          },
          "products": {
            "type": "array",
            "items": {
              "$ref":"#/components/schemas/Product"
            }
          }
        }
      },
      "ExerciseFilter": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string",
            "example": "655144fb56a08fda8eb06785"
          },
          "filter": {
            "type": "string",
            "example": "Muscles"
          },
          "name": {
            "type": "string",
            "example": "abductors"
            
          },
          "imgURL": {
            "type": "string",
            "example": "https://ftp.goit.study/img/power-pulse/filters/back_wzzphw.jpg"
          }
        }
      }
    },
    
    "securitySchemes": {
      "Bearer": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
