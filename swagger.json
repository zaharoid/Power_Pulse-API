    "/user": {
      "get": {
        "tags": ["User"],
        "summary": "Get user parameters",
        "parameters": [],
        "security": [{ "Bearer": [] }],
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "dailyCalories": {
                      "type": "number",
                      "example": 4213
                    },
                    "dailyExerciseTime": {
                      "type": "number",
                      "example": 110
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "User unauthorized"
          },
           "400": {
            "description": "Calculations is empty"
          }
        }
      },
      "patch": {
        "tags": ["User"],
        "summary": "Update user parameters",
        "parameters": [],
        "security": [{ "Bearer": [] }],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UserParametersInfo"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UserParametersInfo"
                }
              }
            }
          },
          "401": {
            "description": "User unauthorized"
          },
          "400": {
            "description": "Calculations is empty"
          }
        }
      },
      "post": {
        "tags": ["User"],
        "summary": "Create user parameters",
        "parameters": [],
        "security": [{ "Bearer": [] }],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UserParametersInfoRequired"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UserParametersInfo"
                }
              }
            }
          },
          "401": {
            "description": "User unauthorized"
          },
          "400": {
            "description": "User's data already exist."
          }
        }
      }
    },
    "/user/info": {
      "patch": {
        "tags": ["User"],
        "summary": "Updates user`s email or/and name",
        "parameters": [],
        "security": [{ "Bearer": [] }],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UserInfo"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
        "properties": {
          "name": { "type": "string", "example": "Changed Username" },
          "email": {
            "type": "string",
            "example": "ExampleEmail@mail.com"
          }
        }
                }
              }
            }
          },
          "401": {
            "description": "User unauthorized"
          }
        }
      }
    },
    "/products": {
      "get": {
        "tags": ["Products"],
        "summary": "Get list of products",
        "parameters": [
          {
            "in": "query",
            "name": "keyWord",
            "required": false
          },
           {
            "in": "query",
            "name": "blood",
            "required": false
          }
        ],
        "security": [{ "Bearer": [] }],
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                   "type": "object",
                   "properties":{
                      "notRecommendedProducts":{
                        "type": "array",
                        "items": {
                          "$ref": "#/components/schemas/Product"
                        }
                      },
                      "recommendedProducts":{
                        "type": "array",
                        "items": {
                          "$ref": "#/components/schemas/Product"
                        }
                      }
                   }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "400": {
            "description": "Bad Request"
          },
          "404": {
            "description": "Not found"
          }
        }
      }
    },
    "/products/categories": {
      "get": {
        "tags": ["Products"],
        "summary": "Get list of products categories",
        "parameters": [],
        "security": [{ "Bearer": [] }],
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProductsCategories"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "404": {
            "description": "Not found"
          }
        }
      }
    },
    "/diary/day": {
      "get": {
        "tags": ["Diary"],
        "summary": "Get day info in diary for user",
        "parameters": [
          {
            "in": "query",
            "name": "date",
            "required": true
          }
        ],
        "security": [{ "Bearer": [] }],
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Diary"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    },
    "/diary/exercise/{id}": {
      "patch": {
        "tags": ["Diary"],
        "summary": "Add exercise in diary for user",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true
          }
        ],
        "security": [{ "Bearer": [] }],
        "requestBody": {
          "description": "Date and exercise time for insert exercise",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type":"object",
                "properties":{
                  "date":{
                    "type":"string",
                    "example": "20.02.2023"
                  },
                  "time":{
                    "type":"number",
                    "example": 10
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Update successful"
          },
          "201": {
            "description": "Exercise added",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Exercise"
                }
              }
            }
          },
          "401": {
            "description": "User unauthorized"
          }
        }
      },
      "delete": {
        "tags": ["Diary"],
        "summary": "Delete exercise in diary for user",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true
          }
        ],
        "security": [{ "Bearer": [] }],
        "requestBody": {
          "description": "Date for delete exercise",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type":"object",
                "properties":{
                  "date":{
                    "type":"string",
                    "example": "20.02.2023"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Delete successful"
          },
          "400": {
            "description": "Item not found on the specified date"
          },
          "401": {
            "description": "User unauthorized"
          }
        }
      }
    },
    "/diary/product/{id}": {
      "patch": {
        "tags": ["Diary"],
        "summary": "Add product in diary for user",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true
          }
        ],
        "security": [{ "Bearer": [] }],
        "requestBody": {
          "description": "Date and product weight for insert product",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type":"object",
                "properties":{
                  "date":{
                    "type":"string",
                    "example": "20.02.2023"
                  },
                  "weight":{
                    "type":"number",
                    "example": 10
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Update successful"
          },
          "201": {
            "description": "Product added",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Product"
                }
              }
            }
          },
          "401": {
            "description": "User unauthorized"
          }
        }
      },
      "delete": {
        "tags": ["Diary"],
        "summary": "Delete product in diary for user",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true
          }
        ],
        "security": [{ "Bearer": [] }],
        "requestBody": {
          "description": "Date for delete product",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type":"object",
                "properties":{
                  "date":{
                    "type":"string",
                    "example": "20.02.2023"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Delete successful"
          },
          "400": {
            "description": "Item not found on the specified date"
          },
          "401": {
            "description": "User unauthorized"
          }
        }
      }
    },
    "/exercises": {
      "get": {
        "tags": ["Exercises"],
        "summary": "Get list of exercises",
        "parameters": [],
        "security": [{ "Bearer": [] }],
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Exercise"
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    },
    "/exercises/filters": {
      "get": {
        "tags": ["Exercises"],
        "summary": "Get list of filter for exercise",
        "security": [{ "Bearer": [] }],
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/ExerciseFilter"
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "RegistrationRequest": {
        "type": "object",
        "required": ["email", "password", "name"],
        "properties": {
          "name": {
            "type": "string",
            "example": "Username"
          },
          "email": {
            "type": "string",
            "format": "email",
            "example": "exampleEmail@mail.com"
          },
          "password": {
            "type": "string",
            "example": "userPassword"
          }
        }
      },
      "RegistrationResponse": {
        "type": "object",
        "properties": {
          "user": {
            "type": "object",
            "properties": {
              "email": {
                "type": "string",
                "format": "email"
              },
              "name": {
                "type": "string",
                "example": "Username"
              },
              "avatarURL": {
                "type": "string",
                "example": "//www.gravatar.com/avatar/6bf1c3e37665abb9a1e0e3f81796c87c?s=2503"
              }
            }
          },

          "token": {
            "type": "string",
            "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJzdWIiOiIxMjM0NTY3ODkwIiwibmFtZSI6IkpvaG4gRG9lIiwiaWF0IjoxNTE2MjM5MDIyfQ.SflKxwRJSMeKKF2QT4fwpMeJf36POk6yJV_adQssw5c"
          }
        }
      },
      "LoginRequest": {
        "type": "object",
        "required": ["email", "password"],
        "properties": {
          "email": {
            "type": "string",
            "format": "email",
            "example": "exampleEmail@mail.com"
          },
          "password": {
            "type": "string",
            "example": "userPassword"
          }
        }
      },
      "LoginResponse": {
        "type": "object",
        "properties": {
          "user": {
            "type": "object",
            "properties": {
              "email": {
                "type": "string",
                "format": "email"
              },
              "name": {
                "type": "string",
                "example": "Username"
              }
            }
          },
          "token": {
            "type": "string",
            "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJzdWIiOiIxMjM0NTY3ODkwIiwibmFtZSI6IkpvaG4gRG9lIiwiaWF0IjoxNTE2MjM5MDIyfQ.SflKxwRJSMeKKF2QT4fwpMeJf36POk6yJV_adQssw5c"
          }
        }
      },
      "AvatarResponse": {
        "type": "object",
        "properties": {
          "avatarURL": {
            "type": "string",
            "example": "//www.gravatar.com/avatar/6bf1c3e37665abb9a1e0e3f81796c87c?s=2503"
          }
        }
      },
      "CurrentUserResponse": {
        "type": "object",
        "properties": {
          "name": { "type": "string", "example": "Username" },
          "email": {
            "type": "string",
            "example": "exampleEmail@mail.com"
          },
          "avatarURL": {
            "type": "string",
            "example": "//www.gravatar.com/avatar/6bf1c3e37665abb9a1e0e3f81796c87c?s=2503"
          }
        }
      },
      "UserInfo": {
        "type": "object",
        "properties": {
          "name": { "type": "string", "example": "Changed Username" }
        }
      },
      "UserParametersInfo": {
        "type": "object",
        "properties": {
          "height": {
            "type": "number",
            "example": 189
          },
          "currentWeight": {
            "type": "number",
            "example": 78
          },
          "desiredWeight": {
            "type": "number",
            "example": 70
          },
          "birthday": {
            "type": "string",
            "example": "2000-01-01"
          },
          "blood": {
            "type": "number",
            "enum": [1, 2, 3, 4]
          },
          "sex": {
            "type": "number",
            "enum": ["male", "female"]
          },
          "levelActivity": {
            "type": "number",
            "enum": [1, 2, 3, 4, 5]
          }
        }
      },
      "UserParametersInfoRequired": {
        "type": "object",
        "required": [
          "height",
          "currentWeight",
          "desiredWeight",
          "birthday",
          "blood",
          "sex",
          "levelActivity"
        ],
        "properties": {
          "height": {
            "type": "number",
            "example": 189
          },
          "currentWeight": {
            "type": "number",
            "example": 78
          },
          "desiredWeight": {
            "type": "number",
            "example": 70
          },
          "birthday": {
            "type": "string",
            "example": "2000-01-01"
          },
          "blood": {
            "type": "number",
            "enum": [1, 2, 3, 4]
          },
          "sex": {
            "type": "number",
            "enum": ["male", "female"]
          },
          "levelActivity": {
            "type": "number",
            "enum": [1, 2, 3, 4, 5]
          }
        }
      },
      "Product": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string",
            "example": "655144fb56a08fda8eb06785"
          },
          "weight": {
            "type": "number",
            "example": 100
          },
          "calories": {
            "type": "number",
            "example": 112
          },
          "category": {
            "type": "string",
            "example": "fish"
          },
          "title": {
            "type": "string",
            "example": "marlin"
          },
          "groupBloodNotAllowed": {
            "type": "object",
            "properties": {
              "1": {
                "type": "boolean",
                "example": false
              },
              "2": {
                "type": "boolean",
                "example": false
              },
              "3": {
                "type": "boolean",
                "example": true
              },
              "4": {
                "type": "boolean",
                "example": true
              }
            }
          }
        }
      },
      "ProductsCategories": {
        "type": "array",
        "items": {
          "type": "string",
          "example": "'cereals', 'diary', 'dried fruits'"
        }
      },
      "Exercise": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string",
            "example": "655144fb56a08fda8eb06785"
          },
          "bodyPart": {
            "type": "string",
            "example": "upper legs"
          },
          "equipment": {
            "type": "string",
            "example": "assisted"
          },
          "gifUrl": {
            "type": "string",
            "example": "https://ftp.goit.study/img/power-pulse/gifs/0016.gif"
          },
          "name": {
            "type": "string",
            "example": "assisted prone hamstring"
          },
          "target": {
            "type": "string",
            "example": "hamstrings"
          },
          "burnedCalories": {
            "type": "number",
            "example": 341
          },
          "time": {
            "type": "number",
            "example": 3
          }
        }
      },
      "ExercisesDetails": {
        "type": "object",
        "properties": {
          "bodyParts": {
            "type": "array",
            "items": {
              "type": "string",
              "example": "'chest', 'upper arms', 'waist'"
            }
          },
          "targets": {
            "type": "array",
            "items": {
              "type": "string",
              "example": "'pectorals', 'triceps', 'biceps'"
            }
          },
          "equipments": {
            "type": "array",
            "items": {
              "type": "string",
              "example": "'dumbbell', 'kettlebell', 'ez barbell'"
            }
          }
        }
      },
      "Diary": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string",
            "example": "699944fb56a0aaa8eb05555"
          },
          "days": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Day"
            }
          }
        }
      },
      "Day": {
        "type": "object",
        "properties": {
          "date": {
            "type": "string",
            "example": "23.09.2023"
          },
          "exercises": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "exercise": {
                  "$ref": "#/components/schemas/Exercise"
                },
                "time": {
                  "type": "string",
                  "example": 10
                }
              }
            }
          },
          "products": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Product"
            }
          }
        }
      },
      "ExerciseFilter": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string",
            "example": "655144fb56a08fda8eb06785"
          },
          "filter": {
            "type": "string",
            "example": "Muscles"
          },
          "name": {
            "type": "string",
            "example": "abductors"
          },
          "imgURL": {
            "type": "string",
            "example": "https://ftp.goit.study/img/power-pulse/filters/back_wzzphw.jpg"
          }
        }
